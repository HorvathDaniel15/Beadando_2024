<Window x:Class="Beadando_2024.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beadando_2024"
        mc:Ignorable="d"
        Title="TaskDetailsWindow" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Feladat Neve:" FontWeight="Bold" />
            <TextBlock x:Name="TaskNameTextBlock" Margin="0,5,0,15" />

            <TextBlock Text="Kategória:" FontWeight="Bold" />
            <TextBlock x:Name="CategoryTextBlock" Margin="0,5,0,15" />

            <TextBlock Text="Prioritás:" FontWeight="Bold" />
            <TextBlock x:Name="PriorityTextBlock" Margin="0,5,0,15" />

            <TextBlock Text="Kezdési idő:" FontWeight="Bold" />
            <TextBlock x:Name="StartTimeTextBlock" Margin="0,5,0,15" />

            <TextBlock Text="Határidő:" FontWeight="Bold" />
            <TextBlock x:Name="EndTimeTextBlock" Margin="0,5,0,15" />
        </StackPanel>
    </Grid>
</Window>
